generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

/// User role types - ADMIN has full access, USER has limited access
enum Role {
  ADMIN
  USER
}

/// User model - stores user accounts with authentication
model User {
  id        Int     @id @default(autoincrement())
  /// User's first name
  firstname String
  /// User's last name
  lastname  String
  /// User's email - must be unique for login
  email     String  @unique
  /// Hashed password using bcrypt
  password  String
  /// User role for access control
  role      Role    @default(USER)
  /// Whether the user account is active
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  /// Relationships
  cartLines    Cartline[]
  userRatings  UserRating[]

  @@map("user")
}

/// User ratings for posters - 1 to 5 stars
model UserRating {
  id        Int      @id @default(autoincrement())
  userId    Int
  posterId  Int
  /// Rating value from 1-5 stars
  numStars  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  /// Relationships
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  poster Poster  @relation(fields: [posterId], references: [id], onDelete: Cascade)

  @@map("user_rating")
  @@unique([userId, posterId])
}

/// Shopping cart items for users
model Cartline {
  id        Int      @id @default(autoincrement())
  userId    Int
  posterId  Int
  /// Number of items to purchase
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  /// Relationships
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  poster Poster @relation(fields: [posterId], references: [id], onDelete: Cascade)

  @@map("cartline")
  @@unique([userId, posterId])
}

model Poster {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  description String   @db.Text
  image       String
  width       Int
  height      Int
  price       Float
  stock       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  /// Relationships
  cartLines   Cartline[]
  userRatings UserRating[]
  genres      GenrePosterRel[]

  @@map("poster")
}

model Genre {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  /// Relationships
  posters GenrePosterRel[]

  @@map("genre")
}

model GenrePosterRel {
  id       Int @id @default(autoincrement())
  genreId  Int
  posterId Int

  /// Relationships
  genre  Genre  @relation(fields: [genreId], references: [id], onDelete: Cascade)
  poster Poster @relation(fields: [posterId], references: [id], onDelete: Cascade)

  @@map("genre_poster_rel")
  @@unique([genreId, posterId])
}
